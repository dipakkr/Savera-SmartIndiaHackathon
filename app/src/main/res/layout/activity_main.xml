<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    android:background="#eaffffff"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use App As:"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#d83a3a"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/employee"
        android:background="@drawable/bt_background"
        android:id="@+id/bt_employee"
        android:layout_marginTop="45dp"
        android:textSize="18sp"
        android:padding="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/bt_employer"
        android:layout_alignStart="@+id/bt_employer" />

    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/employer"
        android:padding="20dp"
        android:textSize="18sp"
        android:background="@drawable/bt_background"
        android:id="@+id/bt_employer"
        android:layout_centerInParent="true"/>

</RelativeLayout>
